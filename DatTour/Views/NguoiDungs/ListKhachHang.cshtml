@model IEnumerable<DatTour.Models.DatChoTour>
@{
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}


<div class="table-responsive">
    <div class="table-wrapper">
        <div class="table-title">
            <div class="row">
                <div class="col-sm-5">
                    <h2>Người tham gia tou</h2>
                </div>

            </div>
        </div>
        <table class="table table-striped table-hover">
            <thead>
                <tr>
                    <th>ID</th>
                    <th>Tên người tham gia</th>
                    <th>Số chỗ</th>
                    <th>Ngày đặt</th>
                    <th>Thành tiền</th>
                    <th>Trạng thái</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var i in Model)
                {
                <tr>
                    <td>@i.ID</td>
                    <td>@i.NguoiDung.TenNguoiDung</td>
                    <td>
                        @i.SoCho
                    </td>
                    <td>@i.NgayDat</td>
                    <td>@i.ThanhTien</td>
                    <td>
                        @if (i.TrangThai == 1)
                        {
                            <td>
                                Đã thanh toán
                            </td>
                        }
                        else
                        {
                            <td>
                                Chưa Thanh toán
                            </td>
                        }
                    </tr>
                }

            </tbody>
        </table>

    </div>
</div>