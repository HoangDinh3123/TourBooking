@{
    Layout = null;
}
<link href="~/css/stylelogin.css" rel="stylesheet" />
<body class="img js-fullheight" style="background-image: url(https://thuthuatnhanh.com/wp-content/uploads/2021/04/hinh-anh-nui-dep-xuat-sac.jpg); ">
    <section class="ftco-section">
        <div class="container">
            <div class="row justify-content-center">
                <div class="col-md-6 col-lg-4">
                    <div class="login-wrap p-0">
                        <h3 class="mb-4 text-center">Login</h3>
                        @using (Html.BeginForm("Register", "NguoiDungs", FormMethod.Post))
                        {
                            <div class="form-group">
                                <input type="text" name="TenTaiKhoan" class="form-control" placeholder="Tài khoản" required>
                            </div>

                            <div class="form-group">
                                <input id="password-field" name="MatKhau" type="password" class="form-control" placeholder="Mật khẩu" required>
                                <span toggle="#password-field" class="fa fa-fw fa-eye field-icon toggle-password"></span>
                            </div>

                            <div class="form-group">
                                <input type="text" name="TenNguoiDung" class="form-control" placeholder="Tên người dùng" required>
                            </div>

                            <div class="form-group">
                                <input type="datetime" name="NgaySinh" class="form-control" placeholder="Ngày sinh" required />
                            </div>

                            <div class="form-group">
                                <input type="text" name="DiaChi" class="form-control" placeholder="Địa chỉ" required>
                            </div>

                            <div class="form-group">
                                <input type="text" name="SoDienThoai" class="form-control" placeholder="Số điện thoại" required>
                            </div>

                            <div class="form-group">
                                <input type="text" name="email" class="form-control" placeholder="Email" required>
                            </div>

                            <div class="form-group">
                                <input type="hidden" name="ChucVu" class="form-control" value="0">
                            </div>

                            <div class="form-group">
                                <button type="submit" class="form-control btn btn-primary submit px-3">Sign In</button>
                            </div>

                        }
                        <a asp-action="Login"><p class="w-100 text-center">&mdash; Sign in &mdash;</p></a>

                    </div>
                </div>
            </div>
    </section>
</body>