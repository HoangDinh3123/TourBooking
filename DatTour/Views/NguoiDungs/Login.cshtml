

@{
    Layout = null;
}
<link href="~/css/stylelogin.css" rel="stylesheet" />
    <body class="img js-fullheight" style="background-image: url(https://thuthuatnhanh.com/wp-content/uploads/2021/04/hinh-anh-nui-dep-xuat-sac.jpg); ">
    <section class="ftco-section">
        <div class="container">
            <div class="row justify-content-center">
                <div class="col-md-6 col-lg-4">
                    <div class="login-wrap p-0">
                        <h3 class="mb-4 text-center">Login</h3>
                        @using (Html.BeginForm("Login", "NguoiDungs", FormMethod.Post))
                        {
                            <div class="form-group">
                                <input type="text" name="Username" class="form-control" placeholder="Username" required>
                            </div>
                            <div class="form-group">
                                <input id="password-field" name="password" type="password" class="form-control" placeholder="Password" required>
                                <span toggle="#password-field" class="fa fa-fw fa-eye field-icon toggle-password"></span>
                            </div>
                            <div class="form-group">
                                <button type="submit" class="form-control btn btn-primary submit px-3">Sign In</button>
                            </div>
                           
                            }
                            <a asp-action="Register"><p class="w-100 text-center">&mdash; Register &mdash;</p></a>

                        </div>
                </div>
            </div>
    </section>
    </body>