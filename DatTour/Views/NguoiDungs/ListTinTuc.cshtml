@model IEnumerable<DatTour.Models.TinTuc>
@{
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}
<div class="table-responsive">
    <div class="table-wrapper">
        <div class="table-title">
            <div class="row">
                <div class="col-sm-5">
                    <h2>Quản lý tin tức</h2>
                </div>
                <div class="col-sm-7">
                    <a id="show-form-button" class="btn btn-secondary"><i class="fa-solid fa-circle-plus"></i><span>Add New Tin tức</span></a>
                </div>

                @*form theem*@

                <div id="my-form" style="display:none;" class="wrapper">
                    <div class="inner">
                        <form asp-action="Create" asp-controller="TinTucs" , new { enctype="multipart/form-data" }>
                            <div class="form-row">
                                <input type="text" name="TenTinTuc" class="form-control" placeholder="Tên tin tức">
                            </div>
                            <div class="form-row">
                                <label class="labelfile" for="upload">Upload a file</label>
                                <input type="file" name="file" id="upload" />
                            </div>
                            <textarea name="NoiDung" id="" placeholder="Message" class="form-control" style="height: 130px;"></textarea>
                            <button>
                                Thêm
                            </button>
                        </form>

                    </div>
                </div>

                @*form theem*@
            </div>
        </div>
        <table class="table table-striped table-hover">
            <thead>
                <tr>
                    <th>ID</th>
                    <th>Tên tin tức</th>
                    <th>Ngày đăng</th>
                    <th>Người đăng</th>
                    <th>Action</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var i in Model)
                {
                    <tr>
                        <td>@i.ID</td>
                        <td>@i.TenTinTuc</td>
                        <td>@i.NgayDang</td>
                        <td>@i.NguoiDung.TenNguoiDung</td>
                        <td>
                            <a asp-action="Edit" asp-controller="TinTucs" asp-route-id="@i.ID" class="settings" title="Settings" data-toggle="tooltip"><i class="fa-sharp fa-solid fa-gear"></i></a>
                            <a asp-action="Delete" asp-controller="TinTucs" asp-route-id="@i.ID" class="delete" title="Delete" data-toggle="tooltip" onclick="return confirm('Ban co chac muon xoa khong')"><i class="fa-solid fa-trash"></i></a>
                        </td>
                    </tr>
                }

            </tbody>
        </table>

    </div>
</div>
