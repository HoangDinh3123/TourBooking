@model DatTour.Models.TinTuc
@{
    Layout = "/Views/Shared/_Layout.cshtml";
}

<div class="card">
    <div class="container-fliud">
        <div class="wrapper row">
            <div class="preview col-md-6">
                <div class="preview-pic tab-content">
                    <div class="tab-pane active" id="pic-1">
                        <img src=@("/img/"+ Model.HinhAnh) style="width:500px; height:400px;" alt="">
                    </div>
                </div>
            </div>
            <div class="details col-md-6">
                <h2 class="product-title">@Model.TenTinTuc</h2>
                <h5 class="product-title">@Model.NgayDang</h5>
                <p class="vote">
                    Hướng dẫn viên: @Model.NguoiDung.TenNguoiDung
                </p>
                <p class="product-description">@Model.NoiDung</p>
            </div>
        </div>
    </div>
</div>