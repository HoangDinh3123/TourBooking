@model DatTour.Models.Tour
@{
    var t = ViewData["DatChoTourbyIdTour"] as IEnumerable<DatChoTour>;
    int TongChoDaDat = 0;
    foreach(var i in t)
    {
        TongChoDaDat = TongChoDaDat + i.SoCho;
    }

    int SoChoCon = Model.SoCho - TongChoDaDat;
}


<h1>Chi tiết Tour</h1>

<hr />
<div class="card">
    <div class="container-fliud">
        <div class="wrapper row">
            <div class="preview col-md-6">
                <div class="preview-pic tab-content">
                    <div class="tab-pane active" id="pic-1">
                        <img src=@("/img/"+ Model.HinhAnh) style="width:500px; height:400px;" alt="">
                    </div>
                </div>
            </div>
            <div class="details col-md-6">
                <h3 class="product-title">@Model.TenTour</h3>
                <p class="product-description">@Model.ThongTin</p>
                <h4 class="price">Giá tour/ người: @Model.GiaTien VND</h4>
                <p class="vote">
                    Hướng dẫn viên: @Model.NguoiDung.TenNguoiDung
                </p>
                <p>Số chỗ: @Model.SoCho</p>
                <p>Số chỗ còn lại: @SoChoCon</p>
                <div class="action">
                    <a asp-controller="DatChoTours" asp-action="Create" asp-route-id="@Model.ID" asp-route-variable="@SoChoCon">
                        <button class="add-to-cart btn btn-default" type="button">Đặt chỗ NGAY</button>
                    </a>
                </div>
            </div>
        </div>
    </div>
</div>



