@model IEnumerable<DatTour.Models.DanhGiaDiaDiem>

<div class="container1">
    <div class="comment-form">

        <form asp-action="Create" asp-controller="DanhGiaDiaDiems">
            <input type="hidden" name="DiaDiemDuLichID"  value="@ViewBag.idDiaDiem"/>
            <div class="form-group">
                <label for="comment">Để lại bình luận:</label>
                <textarea id="comment" name="NoiDung" rows="4" cols="50"></textarea>
            </div>
            <div class="form-group">
                <label for="rating">Đánh giá điểm:</label>
                <select id="rating" name="DiemDanhGia">
                    <option value="1">1</option>
                    <option value="2">2</option>
                    <option value="3">3</option>
                    <option value="4">4</option>
                    <option value="5">5</option>
                    <option value="6">6</option>
                    <option value="7">7</option>
                    <option value="8">8</option>
                    <option value="9">9</option>
                    <option value="10">10</option>
                </select>
            </div>
            <button type="submit">Gửi bình luận</button>
        </form>
    </div>
    <h2>Comments</h2>
    <div id="commentsContainer">
        @foreach (var i in Model)
        {
            <div class="comment">
                <div class="comment-avatar">
                    <img src="https://tse3.mm.bing.net/th?id=OIP.upkpMJt4CjhSII4CScw7kAHaHa&pid=Api&P=0" alt="Avatar">
                </div>
                <div class="comment-content">
                    <p class="comment-text">@i.NoiDung</p>
                    <p class="comment-date">@i.NgayDanhGia</p>
                    <p>@i.DiemDanhGia</p>
                </div>
            </div>
        }
    </div>
</div>
